
var postId = "<%= @post.id %>"
var postFaveCount = "<%= @post.favorited.count %>"

function toggleLikeButton(postId, postFaveCount, innerHTML) {
  let likeButton = document.querySelector(`#like-button-${postId}`)
  let likeCount = document.querySelector(`#like-count-${postId}`)
  if(likeButton.style.color === "rgb(102, 102, 102)"){
    likeButton.style.color = "#44d9e6"
  } else {
    likeButton.style.color = "#666666"
  }

  likeCount.innerHTML = postFaveCount;
  if(postFaveCount === "1") {
    likeCount.innerHTML += " like"
  } else {
    likeCount.innerHTML += " likes"
  }
}

toggleLikeButton(postId, postFaveCount)
